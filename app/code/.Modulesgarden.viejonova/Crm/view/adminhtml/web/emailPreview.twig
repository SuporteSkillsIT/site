<script type="text/javascript">
var datepickerformat = "";
$(document).ready(function(){
    $(".datepick").datepicker({
        dateFormat: "dd/mm/yy",
        showOn: "button",
        buttonImage: "images/showcalendar.gif",
        buttonImageOnly: true,
        showButtonPanel: true,
        showOtherMonths: true,
        selectOtherMonths: true
    });});
</script>
